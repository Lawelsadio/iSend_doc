<svg width="1200" height="630" viewBox="0 0 1200 630" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="envelopeGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f8fafc;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="10" stdDeviation="15" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Decorative elements -->
  <circle cx="100" cy="100" r="50" fill="white" opacity="0.1"/>
  <circle cx="1100" cy="530" r="80" fill="white" opacity="0.1"/>
  <circle cx="200" cy="500" r="30" fill="white" opacity="0.1"/>
  
  <!-- Main envelope -->
  <g transform="translate(600, 315)" filter="url(#shadow)">
    <!-- Envelope body -->
    <path d="M-150 -100 L150 -100 L150 100 L-150 100 Z" fill="url(#envelopeGradient)" stroke="#e2e8f0" stroke-width="2"/>
    
    <!-- Envelope flap -->
    <path d="M-150 -100 L0 -50 L150 -100" fill="none" stroke="#cbd5e1" stroke-width="3" stroke-linecap="round"/>
    
    <!-- Envelope seal -->
    <circle cx="0" cy="0" r="25" fill="#ef4444" opacity="0.8"/>
    <path d="M-15 0 L15 0 M0 -15 L0 15" stroke="white" stroke-width="3" stroke-linecap="round"/>
    
    <!-- Document inside -->
    <rect x="-120" y="-80" width="240" height="160" fill="white" opacity="0.9" rx="5"/>
    <rect x="-100" y="-60" width="200" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="-40" width="160" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="-20" width="180" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="0" width="140" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="20" width="170" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="40" width="120" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="60" width="190" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="80" width="150" height="8" fill="#64748b" rx="2"/>
    <rect x="-100" y="100" width="130" height="8" fill="#64748b" rx="2"/>
  </g>
  
  <!-- Text -->
  <text x="600" y="500" text-anchor="middle" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="white">
    iSend Document Flow
  </text>
  <text x="600" y="540" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" fill="white" opacity="0.9">
    Distribution sécurisée de documents PDF
  </text>
</svg> 